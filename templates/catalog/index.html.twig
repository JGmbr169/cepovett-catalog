{% extends 'base.html.twig' %}

{% block title %}Hello CatalogController!{% endblock %}

{% block body %}

<div class="example-wrapper text-center">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>C:/wamp64/www/cepovett_catalog/src/Controller/CatalogController.php</code></li>
        <li>Your template at <code>C:/wamp64/www/cepovett_catalog/templates/catalog/index.html.twig</code></li>
    </ul>
    
        <div class="container mt-5">
        <h1 class="mb-4">Liste des Produits</h1>
        
        {{ knp_pagination_render(products) }}

        <div class="row">
        
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://fakeimg.pl/250x200" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">Prix: {{ product.price }} €</p>
                            <p class="card-text">{{ product.description | slice(0, 100) }}...</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun produit trouvé.</p>
            {% endfor %}
        </div>

{{ knp_pagination_render(products) }}

</div>

{% endblock %}
