{% extends 'base.html.twig' %}

{% block title %}Catalogue produits{% endblock %}

{% block body %}

<div class="example-wrapper text-center">

    <div class="container mt-5">
        <h1 class="mb-4">Catalogue produits</h1>
        {{ knp_pagination_render(products) }}
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://fakeimg.pl/250x200" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">Prix: {{ product.price }} €</p>
                            <p class="card-text">{{ product.description | slice(0, 50) }}...</p>
                            <a class="btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun produit trouvé.</p>
            {% endfor %}
        </div>
        {{ knp_pagination_render(products) }}
    </div>

</div>

{% endblock %}
